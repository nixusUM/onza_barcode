    android:padding="20dp"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/name"
